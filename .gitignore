# Create .gitignore file
New-Item -ItemType File -Name ".gitignore" -Force

# Add content to .gitignore (copy and paste this into the file)
@"
# Dependencies
/node_modules
/.pnp
.pnp.js

# Testing
/coverage

# Next.js
/.next/
/out/

# Production
/build

# Misc
.DS_Store
*.pem

# Debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Local env files
.env*.local
.env

# Vercel
.vercel

# TypeScript
*.tsbuildinfo
next-env.d.ts

# Large files
*.node
"@ | Out-File -FilePath ".gitignore" -Encoding UTF8